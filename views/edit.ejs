<div class="container">
	<h1> Edit menu </h1>


	<form action="/menus/<%= menus._id %>?_method=PUT" method="POST">

		<div class="form-group">
			<input type="text" name="name" class="form-control" value="<%=menus.name%>" placeholder = "Name">
		</div>
		<div class="form-group">
			<input type="text" name="type" class="form-control" value="<%=menus.type%>" placeholder = "Type">
		</div>
		<div class="form-group">
			<input type="text" name="price" class="form-control" value="<%=menus.price%>" placeholder = "Price">
		</div>
		<div class="form-group">
			<input type="text" name="image" class="form-control" value="<%=menus.image%>" placeholder = "Image">
		</div>
		<div class="form-group">
			<input type="text" name="inventory" class="form-control" value="<%=menus.inventory%>" placeholder = "Inventory">
		</div>
		 <div class="form-group">
			<textarea name="description" class="form-control"  placeholder = "Description"><%=menus.description%></textarea>
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-info" >Save</button>
		</div>


	</form>

	<a href="/menus">Cancel</a>

</div>

<% include partials/footer %>